@using ShopCreator.Models.ViewModels
@model PropertyViewModel

@{
    Layout = "_Layout";
}


<script type='text/javascript'>
    window.onload = function () {
        isValidValuesNeedShow();
    }
    function isValidValuesNeedShow() {
        var element = document.getElementById("validValues");
        var propTypes = document.getElementById("PropertyTypes");
        if (propTypes.options[propTypes.selectedIndex].value == 0 || propTypes.options[propTypes.selectedIndex].value == 5) {
            element.style.display = "none";
        } else {
            element.style.display = "block";
        }
    }
</script>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Property</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PropertyType" class="control-label"></label>
                    <select asp-for="PropertyType" class="form-control" asp-items="ViewBag.PropertyTypes" onclick="isValidValuesNeedShow()" id="PropertyTypes"></select>
                    <span asp-validation-for="PropertyType" class="text-danger"></span>
                </div>
                <div class="form-group" id="validValues">
                    <label asp-for="ValidValues" class="control-label"></label>
                    <input asp-for="ValidValues" class="form-control" />
                    <span asp-validation-for="ValidValues" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
